{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "types": [
        "node",
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es6"
      ],
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "suppressImplicitAnyIndexErrors": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
    ]
}